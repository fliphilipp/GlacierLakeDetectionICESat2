universe    = vanilla

+SingularityImage = "stash:///osgconnect/public/fliphilipp/containers/simple-test7.sif"

executable  = run_py.sh

arguments = $(granule) $(polygon)

max_retries = 5

transfer_input_files = test1.py, utils.py, misc/test1, misc/test2, $(polygon)

transfer_output_files = stats.txt
transfer_output_remaps  = "stats.txt=output/stats-$(granule).txt"

should_transfer_files = YES
when_to_transfer_output = ON_EXIT

log           = log/job.$(ProcId).$(granule).log
error         = errout/job.$(ProcId).$(granule).err
output        = errout/job.$(ProcId).$(granule).out

request_cpus    = 1
request_memory  = 2GB
request_disk    = 4GB

queue granule,polygon from granule_lists/jakobshavn_small_2021-short.csv
